<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_theme_color</item>
        <item name="colorPrimaryDark">@color/main_theme_color</item>
        <item name="colorAccent">@color/main_theme_color</item>
        <item name="android:overScrollMode">never</item>
        <!--<item name="android:windowAnimationStyle">@style/ActivityAnimFade</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="ActivityAnimFade" parent="@android:style/Animation.Translucent">
        <!--<item name="android:activityOpenEnterAnimation">@anim/slide_in</item>-->
        <!--<item name="android:activityOpenExitAnimation">@anim/hold</item>-->
        <item name="android:activityCloseEnterAnimation">@anim/hold</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out</item>
    </style>

    <style name="SettingTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_theme_color</item>
        <item name="colorPrimaryDark">@color/main_theme_color</item>
        <item name="colorAccent">@color/main_theme_color</item>
    </style>

    <style name="ContentTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_theme_color</item>
        <item name="colorPrimaryDark">@color/main_theme_color</item>
        <item name="colorAccent">@color/main_theme_color</item>
    </style>

    <style name="SubscribeTheme" parent="AppTheme">

        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ArticleItemTextView" parent="TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/font_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SingleTextView" parent="TextView">
        <item name="android:maxLines">1</item>
    </style>

    <style name="FollowTextView" parent="TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="InterestPopupWindowStyle" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/left_slide_in</item>
        <item name="android:windowExitAnimation">@anim/left_slide_out</item>
    </style>

    <style name="border_less" parent="AppTheme">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="not_border_less" parent="AppTheme">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
</resources>
